<p style="color: green"><%= notice %></p>

<h1 class = "h3">Properties</h1>
<%= link_to "New property", new_property_path %>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Photo</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Price</th>
        <th scope="col">Rooms</th>
        <th scope="col">Bedrooms</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= image_tag(property.photo,style:"width:50px ; height:50px;")%></td>
          <td><%= property.name %></td>
          <td><%= property.address %></td>
          <td><%= property.price %></td>
          <td><%= property.room %></td>
          <td><%= property.bedrooms %></td>
          <td><%= link_to "Show", property %></td>
          <td><%= link_to "Edit", edit_property_path(property) %></td>
          <td><%= link_to "Destroy", property, data: {turbo_method: :delete, turbo_confirm: 'Are you sure'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
